"""文章标签，每篇文章可以拥有多个标签"""
type Tag {
    id: Int!,
    """标签名"""
    name: String!,
    """创建时间"""
    createdAt: Timestamp!,
    """更新时间"""
    updatedAt: Timestamp!,
    """标签下的文章，支持分页排序"""
    articles(offset: Int = 0, limit: Int = 10, sort: [Order!]): [Article!]!
    """标签下的文章综述"""
    articleCount: Int!
}