type Query {
    """文章分类列表，支持分页排序"""
    categories(offset: Int = 0, limit: Int = 10, sort: [Order!]): [Category!]!
    """文章分类总数"""
    categoryCount: Int!
    """文章标签列表，支持分页排序"""
    tags(offset: Int = 0, limit: Int = 10, sort: [Order!]): [Tag!]!
    """文章标签总数"""
    tagCount: Int!
    """指定id的文章"""
    article(id: Int!): Article
    """指定id的分类"""
    category(id: Int!): Category
    """指定id的标签"""
    tag(id: Int!): Tag
}