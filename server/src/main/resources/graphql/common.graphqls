"""内容类型"""
enum ContentType {
    """富文本"""
    HTML,
    """markdown"""
    MARKDOWN
}

"""排序方式"""
enum Direction {
    """降序"""
    DESC,
    """升序"""
    ASC
}

"""字段排序"""
input Order {
    """字段名称"""
    property: String!,
    """排序方式"""
    direction: Direction!
}

"""分页"""
input Page {
    """页码，从0开始"""
    page: Int!,
    """每页大小"""
    size: Int!,
    """排序方式"""
    sort: [Order!]
}

